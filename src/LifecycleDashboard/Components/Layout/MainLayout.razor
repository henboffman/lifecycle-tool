@inherits LayoutComponentBase
@inject IWebHostEnvironment Environment

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="app-info">
                <span class="environment-badge @GetEnvironmentClass()">@Environment.EnvironmentName</span>
                @if (Environment.IsDevelopment())
                {
                    <span class="mock-data-indicator">Mock Data Mode</span>
                }
            </div>
            @if (Environment.IsDevelopment())
            {
                <button class="devmode-toggle" @onclick="ToggleDevSidebar" title="Toggle Dev Mode Sidebar (Ctrl+Shift+D)">
                    <i class="bi bi-tools"></i> Dev
                </button>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

    @if (Environment.IsDevelopment())
    {
        <DevModeSidebar @bind-IsVisible="_showDevSidebar" />
    }
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss"><i class="bi bi-x-lg"></i></span>
</div>

@code {
    private bool _showDevSidebar = true;

    private void ToggleDevSidebar()
    {
        _showDevSidebar = !_showDevSidebar;
    }

    private string GetEnvironmentClass() => Environment.EnvironmentName switch
    {
        "Development" => "env-dev",
        "Staging" => "env-staging",
        "Production" => "env-prod",
        _ => "env-unknown"
    };
}
