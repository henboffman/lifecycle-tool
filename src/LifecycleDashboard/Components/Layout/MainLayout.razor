@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="app-info">
                <span class="environment-badge">Development</span>
                <span class="mock-data-indicator">Mock Data Mode</span>
            </div>
            <button class="devmode-toggle" @onclick="ToggleDevSidebar" title="Toggle Dev Mode Sidebar (Ctrl+Shift+D)">
                <i class="bi bi-tools"></i> Dev
            </button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

    <DevModeSidebar @bind-IsVisible="_showDevSidebar" />
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss"><i class="bi bi-x-lg"></i></span>
</div>

@code {
    private bool _showDevSidebar = true;

    private void ToggleDevSidebar()
    {
        _showDevSidebar = !_showDevSidebar;
    }
}
