    private void GeneratePreview()
    {
        _previewData.Clear();
        _parseErrors.Clear();
        _parseWarnings.Clear();

        var serviceNowCol = GetMappingValue("ServiceNowAppNameColumn");
        var sharePointCol = GetMappingValue("SharePointFolderNameColumn");
        var repoCol = GetMappingValue("AzureDevOpsRepoNameColumn");
        var altNamesCol = GetMappingValue("AlternativeNamesColumn");
        var capabilityCol = GetMappingValue("CapabilityColumn");
        var notesCol = GetMappingValue("NotesColumn");

        if (string.IsNullOrEmpty(serviceNowCol))
        {
            return;
        }

        // Track seen repo names - repos must be unique (can only map to one app)
        var seenRepoNames = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
        // Track apps to merge multiple repos into same app
        var appMappings = new Dictionary<string, AppNameMapping>(StringComparer.OrdinalIgnoreCase);

        for (int i = 0; i < _csvRows.Count; i++)
        {
            var row = _csvRows[i];
            var rowNum = i + 2;

            var serviceNowName = GetCsvValue(row, serviceNowCol);

            if (string.IsNullOrWhiteSpace(serviceNowName))
            {
                _parseErrors.Add(new ParseIssue(rowNum, "Missing ServiceNow App Name"));
                continue;
            }

            // Parse repo names (may be comma-separated)
            var repoNames = new List<string>();
            var repoValue = GetCsvValue(row, repoCol);
            if (!string.IsNullOrWhiteSpace(repoValue))
            {
                repoNames = repoValue.Split(',', StringSplitOptions.RemoveEmptyEntries)
                    .Select(r => r.Trim())
                    .Where(r => !string.IsNullOrWhiteSpace(r))
                    .ToList();
            }

            // Check for duplicate repo names - repos must be unique
            var duplicateRepos = repoNames.Where(r => seenRepoNames.Contains(r)).ToList();
            if (duplicateRepos.Count > 0)
            {
                foreach (var dupRepo in duplicateRepos)
                {
                    _parseWarnings.Add(new ParseIssue(rowNum, $"Duplicate repo (skipped): {dupRepo}"));
                }
                // Remove duplicates from this row's repos
                repoNames = repoNames.Where(r => !seenRepoNames.Contains(r)).ToList();
            }

            // Add new repos to seen set
            foreach (var repo in repoNames)
            {
                seenRepoNames.Add(repo);
            }

            // Parse alternative names
            var altNames = new List<string>();
            var altValue = GetCsvValue(row, altNamesCol);
            if (!string.IsNullOrWhiteSpace(altValue))
            {
                altNames = altValue.Split(',', StringSplitOptions.RemoveEmptyEntries)
                    .Select(a => a.Trim())
                    .Where(a => !string.IsNullOrWhiteSpace(a))
                    .ToList();
            }

            // Check if we already have a mapping for this ServiceNow app
            if (appMappings.TryGetValue(serviceNowName, out var existingMapping))
            {
                // Merge repos into existing mapping (multiple repos can map to same app)
                existingMapping.AzureDevOpsRepoNames.AddRange(repoNames);

                // Merge alternative names
                foreach (var altName in altNames)
                {
                    if (!existingMapping.AlternativeNames.Contains(altName, StringComparer.OrdinalIgnoreCase))
                    {
                        existingMapping.AlternativeNames.Add(altName);
                    }
                }

                // Update SharePoint folder and capability if not already set (using 'with' for immutable properties)
                var newSharePointFolder = string.IsNullOrEmpty(existingMapping.SharePointFolderName)
                    ? GetCsvValue(row, sharePointCol)
                    : existingMapping.SharePointFolderName;
                var newCapability = string.IsNullOrEmpty(existingMapping.Capability)
                    ? GetCsvValue(row, capabilityCol)
                    : existingMapping.Capability;

                appMappings[serviceNowName] = existingMapping with
                {
                    SharePointFolderName = newSharePointFolder,
                    Capability = newCapability
                };
            }
            else
            {
                // Create new mapping
                var mapping = new AppNameMapping
                {
                    Id = Guid.NewGuid().ToString(),
                    ServiceNowAppName = serviceNowName,
                    SharePointFolderName = GetCsvValue(row, sharePointCol),
                    AzureDevOpsRepoNames = repoNames,
                    AlternativeNames = altNames,
                    Capability = GetCsvValue(row, capabilityCol),
                    Notes = GetCsvValue(row, notesCol),
                    RawCsvValues = row,
                    CreatedAt = DateTimeOffset.UtcNow
                };

                appMappings[serviceNowName] = mapping;
            }
        }

        _previewData = appMappings.Values.ToList();
        _currentStep = 3;
    }

