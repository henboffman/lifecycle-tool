    private void GenerateCapabilityPreview()
    {
        _capPreviewData.Clear();
        _capParseErrors.Clear();
        _capParseWarnings.Clear();

        if (string.IsNullOrEmpty(_capAppNameColumn) || string.IsNullOrEmpty(_capCapabilityColumn))
        {
            return;
        }

        var seenApps = new HashSet<string>(StringComparer.OrdinalIgnoreCase);

        for (int i = 0; i < _capCsvRows.Count; i++)
        {
            var row = _capCsvRows[i];
            var rowNum = i + 2;

            var appName = row.TryGetValue(_capAppNameColumn, out var appVal) ? appVal?.Trim() : null;
            var capability = row.TryGetValue(_capCapabilityColumn, out var capVal) ? capVal?.Trim() : null;

            if (string.IsNullOrWhiteSpace(appName))
            {
                _capParseErrors.Add(new ParseIssue(rowNum, "Missing Application Name"));
                continue;
            }

            if (string.IsNullOrWhiteSpace(capability))
            {
                _capParseWarnings.Add(new ParseIssue(rowNum, $"Missing capability for: {appName}"));
                continue;
            }

            if (seenApps.Contains(appName))
            {
                _capParseWarnings.Add(new ParseIssue(rowNum, $"Duplicate application (skipped): {appName}"));
                continue;
            }

            seenApps.Add(appName);

            _capPreviewData.Add(new CapabilityMapping
            {
                Id = Guid.NewGuid().ToString(),
                ApplicationName = appName,
                Capability = capability
            });
        }

        _capCurrentStep = 3;
    }

