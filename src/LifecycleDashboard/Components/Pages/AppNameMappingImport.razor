    private async Task HandleCapabilityFileSelected(InputFileChangeEventArgs e)
    {
        _capUploadError = null;
        _capCsvFile = e.File;

        if (_capCsvFile.Size > 10 * 1024 * 1024)
        {
            _capUploadError = "File too large. Maximum size is 10MB.";
            _capCsvFile = null;
            return;
        }

        await ParseCapabilityCsvFile();
    }

    private async Task ParseCapabilityCsvFile()
    {
        if (_capCsvFile == null) return;

        try
        {
            using var stream = _capCsvFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var reader = new StreamReader(stream, Encoding.UTF8);

            var content = await reader.ReadToEndAsync();
            var lines = content.Split('\n', StringSplitOptions.RemoveEmptyEntries);

            if (lines.Length == 0)
            {
                _capUploadError = "CSV file is empty.";
                return;
            }

            _capDetectedColumns = ParseCsvLine(lines[0]).ToList();

            if (_capDetectedColumns.Count == 0)
            {
                _capUploadError = "Could not detect columns in CSV header.";
                return;
            }

            _capCsvRows.Clear();
            for (int i = 1; i < lines.Length; i++)
            {
                var values = ParseCsvLine(lines[i]);
                if (values.Count > 0)
                {
                    var row = new Dictionary<string, string>();
                    for (int j = 0; j < Math.Min(_capDetectedColumns.Count, values.Count); j++)
                    {
                        row[_capDetectedColumns[j]] = values[j];
                    }
                    _capCsvRows.Add(row);
                }
            }

            _capTotalRows = _capCsvRows.Count;
            _capCurrentStep = 2;

            // Auto-detect column mappings
            AutoDetectCapabilityMapping();
        }
        catch (Exception ex)
        {
            _capUploadError = $"Error parsing CSV: {ex.Message}";
        }
    }

    private void AutoDetectCapabilityMapping()
    {
        foreach (var col in _capDetectedColumns)
        {
            var colLower = col.ToLowerInvariant();
            if (string.IsNullOrEmpty(_capAppNameColumn) &&
                (colLower.Contains("app") || colLower.Contains("name") || colLower.Contains("application")))
            {
                _capAppNameColumn = col;
            }
            else if (string.IsNullOrEmpty(_capCapabilityColumn) &&
                (colLower.Contains("capability") || colLower.Contains("category") || colLower.Contains("business") || colLower.Contains("offering")))
            {
                _capCapabilityColumn = col;
            }
        }
    }

